<section class="top-list">
  <h1 class="title">Top 10 most searched breeds</h1>
  {{#each breeds}}
    <div class="top-list__item">
      <div class="top-list__image">
        <img src={{image.url}} class="image" alt="cat image">
      </div>
      <div class="top-list__paragraph">
        <a href={{concatenate 'info.html?id=' id}} class="link">
          <h2 class="top-list__title title">{{add @index 1}}. {{name}}</h2>
        </a>
        <p>{{description}}</p>
      </div>
    </div>
  {{/each}}
</section>